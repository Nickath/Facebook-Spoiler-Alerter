{
  "name": "Block facebook content",
  "description": "Block unwanted content on facebook",
  "version": "1",
  "manifest_version": 2,
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'", 
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*/*",
    "https://www.facebook.com/*",
    "http://*/",
    "https://*/",
    "storage",
	"tabs"
  ],
   "background": {
        "scripts": ["background.js"],
		"persistent": true

       },
	   "browser_action":   {
                            "default_icon": {
                            "38": "icon.png"
                            },
                            //"default_popup" :   "localpage.html",   
                            "default_title" :   "Block facebook unwanted content"
                        },
  /*Content scripts are JavaScript files that run in the context of web pages */
  "content_scripts": [
    {
	/* Required. Specifies which pages this content script will be injected into*/
      "matches": [
         "https://www.facebook.com/*"
       ],
	  
       "js": [
        "script.js"
      ]
	  
    }

  ]

}